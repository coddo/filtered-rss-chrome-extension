{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Filtered RSS feed viewer",
    "description": "Filter your RSS feeds to only see what you care about",

    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "index.html",
        "default_title": "Your filtered RSS feeds"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
        "scripts": [#{scripts_list}],
        "persistent": false
    }
}